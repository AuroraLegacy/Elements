	<!-- Additional Ability Score Improvement Items -->
	<element name="Additional Ability Score Diminishment, Strength" type="Item" source="Internal" id="ID_INTERNAL_ITEM_ASI_STRENGTH_DECREASE_1">
		<compendium display="false" />
		<description>
			<p><i>You can equip this item to “enable” it. It remains hidden from the inventory on your character sheet.</i></p>
			<div class="reference">
				<div element="ID_INTERNAL_INFORMATION_ASI_STRENGTH_DECREASE_1" />
			</div>
		</description>
		<setters>
			<set name="category">Additional Ability Score Improvement</set>
			<set name="slot">misc</set>
			<set name="inventory-hidden">true</set>
		</setters>
		<rules>
			<stat name="strength" value="-1" alt="Ability Score Decrease" />
		</rules>
	</element>

